
<div class="background">
  <h2 class="header" >Sign up</h2>
  <div class="transparent-black">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, class: 'text-white' %><br />
          <%= f.email_field :email, autofocus: true, class: 'text-black' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'text-black' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'text-white' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-black' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'text-black' %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
