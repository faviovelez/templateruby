
<div class="background">
  <h2 class="header">Log in</h2>
  <div class="transparent-black">
    <div class="form">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'text-white' %><br />
          <%= f.email_field :email, autofocus: true, class: 'text-black' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'text-white' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'text-black'  %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me, class: 'text-black' %>
            <%= f.label :remember_me, class: 'text-white' %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit 'Log in', class: 'btn btn-primary text-black' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
